<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.snowman.madminute.LetsPlay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/tvTopAnswer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/tvBottomNumber"
        android:textSize="50dp"
        android:layout_below="@+id/tvTopAnswer"
        android:layout_alignLeft="@+id/tvTopAnswer"
        android:layout_alignStart="@+id/tvTopAnswer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/textView2"
        android:textSize="50dp"
        android:layout_below="@+id/tvTopAnswer"
        android:layout_toLeftOf="@+id/tvTopAnswer"
        android:layout_toStartOf="@+id/tvTopAnswer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------"
        android:id="@+id/jffafa"
        android:textSize="50dp"
        android:layout_below="@+id/tvBottomNumber"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAnswer"
        android:layout_below="@+id/jffafa"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

</RelativeLayout>
